<div class="container mt-5">
  <div class="row">
    <div class="col-xs-1-12">
      <div class="card shadow">
        <div class="card-body">
          <h3 class="card-title">Reset Password</h3>
          <p class="card-text">
            <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              <%= f.alert_message "Please fix the errors below." %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@gdomain.com", help: "If there's any user with that email, we will send you a reset password link." %>
              
              <%= f.submit "Send me reset password instructions", class: "btn btn-primary" %>
            <% end %>
          </p>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>